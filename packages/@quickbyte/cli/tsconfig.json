{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "lib": ["ES2020"],
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "composite": true,
      "baseUrl": ".",
      "paths": {
        "@quickbyte/pipelines": ["../pipelines/src"]
      },
      "types": ["node", "jest"]
    },
    "include": ["src/**/*", "src/**/*.test.ts"],
    "exclude": ["node_modules", "dist"],
    "references": [
      { "path": "../pipelines" }
    ]
}