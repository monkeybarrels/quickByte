{
  "name": "quickbyte",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "publish:core": "pnpm --filter @quickbyte/core publish",
    "publish:pipelines": "pnpm --filter @quickbyte/pipelines publish",
    "version:core": "pnpm --filter @quickbyte/core version",
    "version:pipelines": "pnpm --filter @quickbyte/pipelines version",
    "release:core:patch": "pnpm --filter @quickbyte/core version patch && pnpm publish:core",
    "release:core:minor": "pnpm --filter @quickbyte/core version minor && pnpm publish:core",
    "release:core:major": "pnpm --filter @quickbyte/core version major && pnpm publish:core",
    "release:pipelines:patch": "pnpm --filter @quickbyte/pipelines version patch && pnpm publish:pipelines",
    "release:pipelines:minor": "pnpm --filter @quickbyte/pipelines version minor && pnpm publish:pipelines",
    "release:pipelines:major": "pnpm --filter @quickbyte/pipelines version major && pnpm publish:pipelines"
  },
  "devDependencies": {
    "@types/node": "^20.17.28",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
