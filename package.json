{
  "name": "quickbyte",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "publish:core": "pnpm --filter @quickbyte/core publish",
    "publish:pipelines": "pnpm --filter @quickbyte/pipelines publish",
    "version:core:patch": "pnpm --filter @quickbyte/core version:patch",
    "version:core:minor": "pnpm --filter @quickbyte/core version:minor",
    "version:core:major": "pnpm --filter @quickbyte/core version:major",
    "version:core:pre": "pnpm --filter @quickbyte/core version:pre",
    "version:core:prepatch": "pnpm --filter @quickbyte/core version:prepatch",
    "version:core:preminor": "pnpm --filter @quickbyte/core version:preminor",
    "version:core:premajor": "pnpm --filter @quickbyte/core version:premajor",
    "version:pipelines:patch": "pnpm --filter @quickbyte/pipelines version:patch",
    "version:pipelines:minor": "pnpm --filter @quickbyte/pipelines version:minor",
    "version:pipelines:major": "pnpm --filter @quickbyte/pipelines version:major",
    "version:pipelines:pre": "pnpm --filter @quickbyte/pipelines version:pre",
    "version:pipelines:prepatch": "pnpm --filter @quickbyte/pipelines version:prepatch",
    "version:pipelines:preminor": "pnpm --filter @quickbyte/pipelines version:preminor",
    "version:pipelines:premajor": "pnpm --filter @quickbyte/pipelines version:premajor",
    "release:core:patch": "pnpm version:core:patch && pnpm publish:core",
    "release:core:minor": "pnpm version:core:minor && pnpm publish:core",
    "release:core:major": "pnpm version:core:major && pnpm publish:core",
    "release:pipelines:patch": "pnpm version:pipelines:patch && pnpm publish:pipelines",
    "release:pipelines:minor": "pnpm version:pipelines:minor && pnpm publish:pipelines",
    "release:pipelines:major": "pnpm version:pipelines:major && pnpm publish:pipelines"
  },
  "devDependencies": {
    "@types/node": "^20.17.28",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
